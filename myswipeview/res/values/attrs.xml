<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="swipeView">
        
        <attr name="contentView" format="reference" />
        <attr name="leftBackView" format="reference" />
        <attr name="rightBackView" format="reference" />
        
       	<attr name="leftOffset" format="dimension"/>
       	<attr name="rightOffset" format="dimension"/>
       	
       	<attr name="swipeMode" format="enum">
       	    <enum name="none" value="0"/>
       	    <enum name="both" value="1"/>
       	    <enum name="right" value="2"/>
       	    <enum name="left" value="3"/>
       	</attr>
       	
    </declare-styleable>
</resources>
